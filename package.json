{
  "name": "react-simple-headless-carousel",
  "private": false,
  "version": "0.0.8",
  "sideEffects": false,
  "description": "React simple headless carousel",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "tsc": "tsc --noEmit",
    "format": "prettier --write .",
    "format:ci": "prettier --check .",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "build:lib": "vite build -c vite.lib.config.ts",
    "build:css": "NODE_ENV=production tailwindcss -o dist/styles.min.css -m",
    "npm:lib": "npm run build:lib && npm run build:css"
  },
  "files": [
    "/dist"
  ],
  "main": "dist/simple-headless-carousel.umd.cjs",
  "module": "dist/simple-headless-carousel.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/simple-headless-carousel.js",
      "require": "./dist/simple-headless-carousel.umd.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles.min.css": "./dist/styles.min.css"
  },
  "peerDependencies": {
    "react": "16.x || 17.x || 18.x",
    "react-dom": "16.x || 17.x || 18.x"
  },
  "devDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/node": "^20.14.3",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-lib-inject-css": "^2.1.1",
    "vite-plugin-dts": "^3.9.1"
  }
}
